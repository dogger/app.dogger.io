{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "/p:GenerateFullPaths=true",
                "${workspaceFolder}/Dogger.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "/p:GenerateFullPaths=true",
                "${workspaceFolder}/Dogger.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test with coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "/p:GenerateFullPaths=true",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./lcov.info",
                "${workspaceFolder}/Dogger.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test watch with coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "--project",
                "Dogger.sln",
                "test",
                "/p:GenerateFullPaths=true",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./lcov.info"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            }
        }
    ]
}